FROM node:18-alpine

# Metadados do container
LABEL maintainer="MauricioJSNeto"
LABEL description="Arbitron Frontend - Advanced Cryptocurrency Arbitrage Bot Dashboard"
LABEL version="1.0.0"

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY next.config.js ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
